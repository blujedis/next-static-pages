{
  "name": "next-static-pages",
  "version": "0.0.2-0",
  "description": "Module that makes NextJS static pages like markdown easier to display.",
  "keywords": [
    "markdown",
    "highlight",
    "syntax",
    "highlighter",
    "pages"
  ],
  "homepage": "https://github.com/blujedis/next-static-pages#readme",
  "bugs": {
    "url": "https://github.com/blujedis/next-static-pages/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/next-static-pages.git"
  },
  "license": "MIT",
  "author": "Blujedis <blujedicorp@gmail.com>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "docs": "rimraf dist && typedoc src/index.ts && touch ./docs/.nojekyll",
    "clean": "rimraf dist",
    "prebuild": "npm run test && npm run clean",
    "build": "npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src/**/* --fix",
    "prerelease": "npm run build",
    "release": "npx standard-version",
    "postrelease": "git push --follow-tags",
    "start": "rollup -c -w",
    "pretest": "npm run lint",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch --notify",
    "types:check": "tsc --noEmit",
    "types:watch": "npm run types:check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "git add"
    ]
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "peerDependencies": {
    "next": "^9.5 || >=10",
    "react": "^16.6.0 || ^17",
    "react-dom": "^16.6.0 || ^17"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/runtime": "^7.14.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/markdown-it": "^12.0.1",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "next": "^10.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.7.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "fast-glob": "^3.2.5",
    "gray-matter": "^4.0.3",
    "highlight.js": "^10.7.2",
    "markdown-it": "^12.0.6",
    "xss": "^1.0.9"
  }
}